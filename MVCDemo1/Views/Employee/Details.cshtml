@model MVCDemo1.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}
<h2>Details</h2>
<div>
    <table style="font-family:Arial;">
        <tbody>            
            <tr>
                <td>
                    <b>Employee ID:</b>
                </td>
                <td>@Model.Id </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <td>City</td>
                <td>@Model.City</td>
            </tr>
        </tbody>
    </table>
    @Html.ActionLink("Back to List", "Index", new { DepartmentId = @Model.DepartmentId })
</div>
